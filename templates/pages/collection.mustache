<h2 class="title">{{collectionName}}</h2>
<br><br>
{{#pagination}}
<div class="pagination collection-pagination">
  <ul>
    <li><a href="/{{collectionName}}?page={{prev}}">&nbsp;&lt;&lt;&nbsp;</a></li>
    {{#pages}}
    <li {{#active}}class="active"{{/active}}>
      <a href="/{{collectionName}}?page={{pageNumber}}">{{label}}</a>
    </li>
    {{/pages}}
    <li><a href="/{{collectionName}}?page={{next}}">&nbsp;&gt;&gt;&nbsp;</a></li>
  </ul>
</div>
{{/pagination}}

{{#contents}}
<div class="row">
  <div class="span8">
    <pre class="document doc-preview">{{doc}}</pre>
  </div>
  <div class="span1">
    <a class="edit-link" href="/{{collectionName}}/{{_id}}/edit"><i class="icon icon-edit"></i></a>
  </div>
</div>
{{/contents}}


<script>
$('.document').on('click', function (event) {
  $(event.currentTarget).toggleClass('doc-preview');
});

$('.document').on('mouseover', function () {
  $('body').css('cursor', 'pointer');
});

$('.document').on('mouseout', function () {
  $('body').css('cursor', 'auto');
});
</script>

